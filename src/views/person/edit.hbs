<div class="container p-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card text-left">
                <div class="card-header">
                    <h3>Edit person</h3>
                </div>
                <div class="card-body">
                    <form action="/person/edit/{{data.id}}" method="POST">
                        <div class="form-group">
                            <input id="title" type="text" name="name" placeholder="Name(s)" class="form" value="{{data.name}}">
                       {{!-- </div>
                        <div class="form-group"> --}}
                            <input type="text" name="apellidoP" placeholder="Lastname" class="form" value="{{data.apellidoP}}">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidoM" placeholder="Surname" class="form-control" value="{{data.apellidoM}}">
                        </div>
                        <div class="form-group">
                            <label for="estado">Estado</label>
                            <select class="form-control" id="estado" name="estado_id" >
                                <option selected="selected" value="{{data.estado_id}}">{{data.nombreEstado}}</option>
                                {{#each estados}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="municipio" class="text-left">Municipio</label>
                            <select class="form-control" id="municipio" name="municipio_id">
                                <option selected="selected" value="{{data.municipio_id}}">{{data.nombreMunicipio}}</option>
                                {{#each municipios}}
                                <option value="{{id}}">{{nombre}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/getMunicipio.js"></script>